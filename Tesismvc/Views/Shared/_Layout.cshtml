
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">
    <link href="~/Content/admin1.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    
</head>
<body>

    <div class="wrapper">
        <div class="section">
            <div class="top_navbar">
                <div class="hamburger">
                    <a href="#">
                        <i class="fas fa-bars"></i>
                    </a>
                </div>
            </div>

        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Sistema escolar</p>
            </footer>
        </div>
        <div class="sidebar">
            <div class="profile">
                <img src="https://cdn.icon-icons.com/icons2/35/PNG/512/admin_person_user_man_2839.png" alt="profile_picture">
                <h3>@User.Identity.Name</h3>
                <p>Welcome</p>
            </div>
            <ul>
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Admin"))
                    {

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="icon"><i class="fas fa-user-shield"></i></span>
                                <span class="item"> Admin</span>

                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <li class="dropdown-item active">@Html.ActionLink("Usuarios", "Index", "users")</li>
                                <li class="dropdown-item active">@Html.ActionLink("Roles", "Index", "roles")</li>
                                <li class="dropdown-item active">@Html.ActionLink("Profesores Registrados", "Index", "Docentes")</li>
                                <li class="dropdown-item active">@Html.ActionLink("Cursos", "Index", "Cursoes")</li>
                            </ul>
                        </li>

                    }
                    if (User.IsInRole("Admin") || User.IsInRole("Profesor"))
                    {

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="icon"><i class="fas fa-user-friends"></i></span>
                                <span class="item"> Profesor</span>

                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <li class="dropdown-item active">@Html.ActionLink("Matriculas", "Index", "Matriculas")</li>
                                <li class="dropdown-item active">@Html.ActionLink("Alumnos", "Index", "Alumnoses")</li>
                                <li class="dropdown-item active">@Html.ActionLink("Asignaturas", "Index", "Asignaturas")</li>
                                <li class="dropdown-item active">@Html.ActionLink("Asistencias", "Index", "Asistencias")</li>
                                <li class="dropdown-item active">@Html.ActionLink("Notas", "Index", "Notas")</li>


                            </ul>
                        </li>
                        <li>@Html.ActionLink("Logout", "Logout", "Account")</li>

                    }



                }
                else

                {
                    <li>@Html.ActionLink("Login", "Login", "Account")</li>
                }


            </ul>
        </div>






        <script>
            var hamburger = document.querySelector(".hamburger");
            hamburger.addEventListener("click", function () {
                document.querySelector("body").classList.toggle("active");
        </script>
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/navbar.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>